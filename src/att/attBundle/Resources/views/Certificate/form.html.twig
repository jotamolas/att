{% block formCertificate %}

    {% block subFormErrors %}
        <div class="form-group">
            <div id="formErrors">
                {{ form_errors(form) }}
            </div>  
        </div>  
    {% endblock %}  

    <div class="form-group">
        <label>{% trans %}Date Range{% endtrans %}</label>
        <div class="input-group input-daterange">
            {{ form_widget(form.datefrom)}} 
            <div class="input-group-addon">to</div>
            {{ form_widget(form.dateto)}}
        </div>
    </div>

    {% block subForm %}

    {% endblock %}


    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>{% trans %}Details{% endtrans %}</label>
                {{ form_widget(form.details)}}
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>{% trans %}Upload Scan File{% endtrans %}</label>
                {{ form_widget(form.scanFile, {required : FALSE} )}}
                <small id="passwordHelpInline" class="text-muted">
                    {% trans %} File must have an image format JPG or JPEG digital PDF.{% endtrans %}
                </small>
            </div>  
        </div>
    </div>

{% endblock %}
{% block formSumbit %} 
    <div class="row">
        <div class="col-md-3 col-md-offset-5">
            <div class="form-group">                
                <button type="submit" class="btn btn-default">
                    {% trans %} Save{% endtrans %}
                </button>     
            </div>   
        </div>
    </div>
{% endblock %}