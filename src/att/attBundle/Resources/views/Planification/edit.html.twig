<div class="row">
    <div class="col-md-12">
        {{ form_start(form,{'attr':{'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">    
                    {{ form_label(form.date) }}
                    <div class="input-group date">
                        {{ form_errors(form.date) }}
                        <div class="input-group-addon">
                            <span class="fa fa-calendar"></span>
                        </div>
                        {{ form_widget(form.date) }} 
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">    
                    {{ form_errors(form.stateplan) }}
                    {{ form_label(form.stateplan) }}
                    <div class="input-group">
                        <div class="input-group-addon">
                            <span class="fa fa-search"></span>
                        </div>
                        {{ form_widget(form.stateplan) }} 
                    </div>
                </div>
            </div>                
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">    
                    {{ form_label(form.inplan) }}
                    <div class="input-group clockpicker ">
                        {{ form_errors(form.inplan) }}
                        <div class="input-group-addon">
                            <span class="fa fa-clock-o"></span>
                        </div>
                        {{ form_widget(form.inplan) }} 
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(form.outplan) }}
                    <div class="input-group clockpicker ">
                        {{ form_errors(form.outplan) }}
                        <div class="input-group-addon">
                            <span class="fa fa-clock-o"></span>
                        </div>
                        {{ form_widget(form.outplan) }}
                    </div>
                </div>
            </div>
        </div>


        {{ form_rest(form) }}   
        {{ form_end(form) }}

    </div>

</div>