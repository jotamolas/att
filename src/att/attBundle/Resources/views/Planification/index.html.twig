{% extends "appBundle:app:index.html.twig"%}

{% block sidebar %}
    <li>
        <a href="#" class="active"><i class="fa fa-id-card fa-fw"></i> 
            <span class="masked">
                {% trans %} Planification Module{% endtrans %}
            </span>    
        </a>
    </li>
    <li class="">
        <a href="#">
            <i class="fa fa-floppy-o fa-fw"></i>
            <span class="masked">
                <span>
                    {% trans %}Register {% endtrans %}
                </span>
                <span class="fa arrow"></span>
            </span>
        </a>
        <ul class="nav nav-second-level collapse" aria-expanded="false" style="height: 0px;">
            <li>
                <a id="import_wsdl_plan">
                    <i class="fa fa-cube fa-fw"></i>
                    {% trans %}WSDL - REST API Sync{% endtrans %}
                </a>
            </li>
            <li> 
                <a  id="create_schema_plan" href="{{ path('att_plan_new_from_schema',{"mode":app.security.token.providerKey}) }}">
                    <i class="fa fa-table fa-fw"></i>
                    {% trans %}From Schema{% endtrans %}
                </a>
            </li>
            <li> 
                <a  id="create_plan">
                    <i class="fa fa-file fa-fw"></i>
                    {% trans %}New/Update{% endtrans %}
                </a>
            </li>
            <li> 
                <a  id="import_file_plan" href="{{ path('att_plan_import_from_file',{"mode":app.security.token.providerKey}) }}">
                    <i class="fa fa-file-archive-o fa-fw"></i>
                    {% trans %}From File{% endtrans %}
                </a>
            </li>
        </ul>
        <!-- /.nav-second-level -->
    </li>
    <li class="">
        <a href="{{ path('att_plan_list',{"mode":app.security.token.providerKey}) }}" id="list_plan">
            <i class="fa fa-list fa-fw"></i>
            <span class="masked">
                <span>
                    {% trans %}List{% endtrans %}
                </span>
                <span class="fa arrow"></span>
            </span>
        </a>   
    </li>
{% endblock %}
{% block content %}
    <div class="row">
        <div class="page-header">
                <h1>{% trans %}Planification{% endtrans %} <small> {% trans %} Module{% endtrans %}</small></h1>
        </div>
    </div>
{% endblock %}
{%  block javascripts %}
    {{ parent()}}
    <script type="text/javascript">
        $('#create_plan').click(function () {
            $('#content').load('{{ path('att_plan_new',{"mode":app.security.token.providerKey}) }}');
        });
    </script>
{%endblock%}

