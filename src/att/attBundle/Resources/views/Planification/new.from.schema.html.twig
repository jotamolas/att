{% extends 'attBundle:Planification:index.html.twig' %}
{% block title %}
    {% trans %} Create Plan From Schema{% endtrans %}
{% endblock title %}

{% block stylesheets %}
    {{ parent()}}
    <style type="text/css">
        .panel-body .form-horizontal .form-group .form-inline {
            margin-right: 25px;
            margin-left: 25px;
            margin-bottom: 50px;
        }
    </style>
{% endblock stylesheets %}
{% block content %}
    <div class="row">
        <ol class="breadcrumb">
            <li><a href="#">{% trans %}Dashboard{% endtrans %}</a></li>
            <li><a href="#">{% trans %} Planification{% endtrans %} </a></li>
            <li><a href="#">{% trans %} Create{% endtrans %} </a></li>    
            <li class="active">{% trans %} Schema {% endtrans %} </li>
        </ol>   
    </div>
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-file-archive-o"></i>   
                <span>{% trans %} Create Plan From Schema{% endtrans %}</span>
            </div>
            <div class="panel-body"  style="padding-top:30px">  
                {{ form_start(form,{'attr':{'class':'attForm', 'id':'attForm'} }) }}
                <div class="form-group">
                    <div id="formErrors">
                        {{ form_errors(form) }}
                    </div>
                </div>
                <div class="form-group ">
                    <label for="">{% trans %}Select date range{% endtrans %}:</label>
                    <div class="input-group input-daterange">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                        {{ form_widget(form.datefrom)}}  
                        <span class="input-group-addon">to</span>
                        {{ form_widget(form.dateto)}}
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>   
                </div>   
                <div class="form-group ">
                    <label for="">{% trans %}Select employees to apply planning{% endtrans %}: </label>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-user"></span>
                        </span>
                        {{ form_widget(form.employee)}}
                    </div>    
                </div>       

                <div class="form-group">
                    {{ form_widget(form.send)}}
                </div>    

                {{ form_rest(form) }}          
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock content %}        
   
{% block javascripts %}
    
    
    <script>
        $('.input-daterange input').each(function () {
            $(this).datepicker({
                language: "es",
                format: 'yyyy-mm-dd',
                autoclose: true,
                todayHighlight: true
            });
        });

        $('.select2').select2({
            //theme: "bootstrap"
        });

    </script>   

{% endblock javascripts %}

