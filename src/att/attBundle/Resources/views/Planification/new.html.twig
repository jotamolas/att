{% block stylesheets %}
    <style type="text/css">
        .panel-body .form-horizontal .form-group .form-inline {
            margin-right: 25px;
            margin-left: 25px;
            margin-bottom: 50px;
        }
    </style>
{% endblock %}

{% block content_data %}
    <div class="container">

        <div  style="margin-top:50px;" class="col-md-7 col-md-offset-1">

            <div class="panel panel-default" id="panel">

                <div class="panel-heading">
                    Plan Register
                </div>

                <div style="padding-top:30px" class="panel-body">

                    {{ form_start(form,{'attr':{'class':'attForm', 'id':'attForm'} }) }}




                    <div class="form-group">
                        <div id="formErrors">
                            {{ form_errors(form) }}
                        </div>
                    </div>


                    <div class="form-group ">
                        <label for="">Select date range:</label>
                        <div class="input-group input-daterange">
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                            {{ form_widget(form.datefrom)}}  
                            <span class="input-group-addon">to</span>
                            {{ form_widget(form.dateto)}}
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>   
                    </div>    

                    <div class="form-group">
                        <label for="">Select time range:</label>                              
                        <div class="form-inline">   
                            <div class="input-group clockpicker">
                                <span class="input-group-addon">
                                    In
                                    <span class="glyphicon glyphicon-time"></span>
                                </span>
                                {{ form_widget(form.inplan)}}

                            </div>       
                            <div class="input-group clockpicker">
                                {{ form_widget(form.outplan)}}
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-time"></span>
                                    Out
                                </span>
                            </div>
                        </div>            
                    </div>      

                    <div class="form-group ">   
                        <label for="">Select Plan State: </label>
                        <div class="input-group">
                            <span class="input-group-addon">
                                State
                            </span>
                            {{ form_widget(form.stateplan)}}
                        </div>
                    </div>                


                    <div class="form-group ">
                        <label for="">Select employees to apply planning : </label>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-user"></span>
                            </span>
                            {{ form_widget(form.employee)}}
                        </div>    
                    </div>       

                    <div class="form-group">
                        {{ form_widget(form.send)}}
                    </div>    


                    {{ form_rest(form) }}           

                </div>

                {{ form_end(form) }}

            </div>
        </div>
    </div>  

{% endblock %}   


{% block javascripts %}

    <script src="{{ asset('bundles/att/js/attPlanForm.js') }}" ></script>    
    <script>
        $(document).ready(function () {
            buildFieldsForm();
            initForm();

        });
    </script>   

{% endblock %}

