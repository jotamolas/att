{% extends 'base.html.twig' %}

{% block body %}
    <h1>Listado de Estados</h1>

    <table>
        <thead>
            <tr>
                <th>Description</th>
                <th>Id</th>
            </tr>
        </thead>
        <tbody>
        {% for state in states %}
            <tr>
                <td>{{ state.description }}</td>
                <td>{{ state.id }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
