{# block javascripts %}
    {{ parent()}}
    <script>
        $('select').select2({
            theme: "bootstrap",
            placeholder: "Select a Employee",
            minimumInputLength: 2,
            ajax: {
                data: function (params) {
                    return{
                        q: params.term,
                        page: params.page
                    };
                },
                processResults: function (data) {
                    return {
                        results: $.map(data, function (item) {
                            return {
                                text: item.id+" | "+item.surname+", "+ item.name +" | "+ item.bus +" | "+ item.company,
                                id: item.id
                            };
                        })
                    };
                }
            }
        });
        $('select').change(function (e) {
            $('#department_manager').val($("select").select2().val());
        });
    </script>

