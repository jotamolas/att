                            <span class="glyphicon glyphicon-th"></span>
                        </div>
                        {{ form_widget(form.sex) }} 
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(form.email)}}
                    <div class="input-group">
