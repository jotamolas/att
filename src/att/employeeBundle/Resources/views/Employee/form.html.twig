                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">    
                    {{ form_label(form.surname) }}
                    <div class="input-group">
                        {{ form_errors(form.surname) }}
                        <div class="input-group-addon">
                            <span class="glyphicon glyphicon-pencil"></span>
                        </div>
                        {{ form_widget(form.surname)}} 
                    </div>
                </div>
            </div>                
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">    
                    {{ form_label(form.dni) }}
