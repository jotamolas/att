<div class="col-md-12" >
    <div class="row">
        <div class="col-md-2">            
        {% if employee.photo %}
            <img src="{{image}}" style="width: 75px; height: 90px">
        {% endif %}        
        </div>
        <div class="col-md-10">  
            <h1>{{ employee.surname }}, {{ employee.name }} </h1>
        </div>      
    </div>
    <div class="row">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ employee.id }}</td>
                </tr>
                <tr>
                    <th>Person Id</th>
                    <td>{{ employee.dni }}</td>
                </tr>
                <tr>
                    <th>Sex</th>
                    <td>{% if employee.sex == 'M'%}Male{% else %} Female {% endif %}</td>
                </tr>            
                <tr>
                    <th>Birthday</th>
                    <td>{{ employee.birthday | date('Y-m-d') }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ employee.name }}</td>
                </tr>
                <tr>
                    <th>Surname</th>
                    <td>{{ employee.surname }}</td>
                </tr>
                <tr>
                    <th>Celphone</th>
                    <td>{{ employee.celphone }}</td>
                </tr>
                <tr>
                    <th>Phone</th>
                    <td>{{ employee.phone }}</td>
                </tr>
                <tr>
                    <th>Address</th>
                    <td>{{ employee.address }}</td>
                </tr>
                <tr>
                    <th>City</th>
                    <td>{{ employee.city }}</td>
                </tr>
                <tr>
                    <th>State</th>
                    <td>{{ employee.state }}</td>
                </tr>            
                <tr>
                    <th>Email</th>
                    <td>{{ employee.email }}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
