{% extends "medicalsrvBundle:Default:index.html.twig"%}
{% block content %}
    <div class="row">
        <ol class="breadcrumb">
            <li><a href="#">{% trans %}Dashboard{% endtrans %}</a></li>
            <li><a href="#">{% trans %} Medical Order{% endtrans %} </a></li>    
            <li class="active">{% trans %} New {% endtrans %} </li>
        </ol>   
    </div>
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-list-alt"></i>   
                <span>{% trans %} New Medical Order{% endtrans %}</span>
            </div>
            <div class="panel-body"> 
                <div class="row">
                    <div class="col-md-4 col-md-offset-1">
                        <div class="row">
                            <div class="table-responsive">
                                <table class="table table-bordered" style="border: none">
                                    <tbody>
                                        <tr>
                                            <td class="text-center" colspan="2">
                                                <h4><span class="text-muted">{% trans %}Employee {% endtrans %}: </span> {{ medicalorder.employee.surname}}, {{ medicalorder.employee.name}}</h5>
                                            </td>                                            
                                        </tr>
                                        <tr>
                                            <td class="text-center">
                                                <h4><span class="text-muted left">{% trans %}Date{% endtrans %} : </span> {{ medicalorder.date | date('Y-m-d')}}</h5>
                                            </td>
                                            <td class="text-center">
                                                <h4><span class="text-muted left">{% trans %}Status {% endtrans %}: </span> {{ medicalorder.status.description | trans | capitalize}}</h5>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="row">
                            {% include 'medicalsrvBundle:MedicalOrder:form.html.twig' with {'form': form} %}
                        </div>
                    </div>
                    <div class="col-sm-6">

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
{% endblock %}
