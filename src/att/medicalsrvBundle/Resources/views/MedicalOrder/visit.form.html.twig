                        {{ form_widget(form.matricula) }} 
                    </div>
                </div>  
            </div>   
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">    
                    {{ form_label(form.status) }}
                    <div class="input-group">
                        {{ form_errors(form.status) }}
