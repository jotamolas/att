                            <span class="fa fa-th"></span>
                        </div>
                        {{ form_widget(form.restdateto)}} 
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-5 col-md-offset-4">
                <div class="form-group">    
                    {{ form_label(form.confirmOrder) }}
                    {{ form_errors(form.confirmOrder) }}
                    {{ form_widget(form.confirmOrder) }} 
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>  
</div>   


<script>
    $(".datepicker").datepicker({
        format: 'yyyy-mm-dd',
        todayHighlight: true,

    }).on('show.bs.modal', function (event) {
        // prevent datepicker from firing bootstrap modal "show.bs.modal"
        event.stopPropagation();
    });

</script>
